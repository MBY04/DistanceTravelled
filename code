#include <iostream>
#include <iomanip>
#include <string>

int main() {
    // 2 Variables that will be assigned a value by the user.
    int speed;
    int time;
    int user_Input; // Variable that will let the user assign values.

    std::cout << "What is the speed of the vehicle in mph? "; // Prompt the user to input the speed.
    std::cin >> user_Input; // Stores the value in user_Input and assigns it to variable speed.
    speed = user_Input; 

    std::cout << "How many hours has it travelled? "; // Prompt the user to input the time.
    std::cin >> user_Input; // Stores the value in user_Input and assigns it to variable time.
    time = user_Input;

    std::cout << std::endl;

    std::cout << "hour  miles travelled" << std::endl;
    std::cout << "--------------------------" << std::endl;

    for (int i = 1; i <= time; i++) {
        std::cout << i << "     " << speed * i << std::endl;
    // for loop that will increment from 1 till it is equal to time variable, it outputs spaces and the product of speed and variable i on each iteration. 

    }
}
